<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsScreenActivity" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnCount="1" >

        <Button
            android:id="@+id/StatisticsButton"
            style="@style/Theme.Cse"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="Statistics" />

        <Button
            android:id="@+id/MenuButton"
            style="@style/Theme.Cse"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:text="@string/MenuButton" />

        <Button
            android:id="@+id/QuestionsButton"
            style="@style/Theme.Cse"
            android:layout_width="99dp"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:text="@string/QestionsButton" />
    </GridLayout>

    <Button
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/note"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:text="Change Password" />

    <CheckBox
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_marginBottom="59dp"
        android:text="Recieve Emails" />

    <CheckBox
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_marginBottom="40dp"
        android:text="Notifications" />

</RelativeLayout>
